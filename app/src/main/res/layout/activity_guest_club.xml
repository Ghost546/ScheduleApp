<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/club_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/club_speciality_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Специальность"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/club_name_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/club_tutor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тьютор"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/club_speciality_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/club_leader_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Руководитель кружка"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/club_tutor_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/club_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/club_leader_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/club_themes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Темы"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/club_description_text"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>