<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/all_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/club_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Информация о кружках"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/all_name_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/sign_up_for_a_club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Записаться на кружок"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/club_information"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/sign_out_from_a_club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отписаться из кружка"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/sign_up_for_a_club"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выход"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/sign_out_from_a_club"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>